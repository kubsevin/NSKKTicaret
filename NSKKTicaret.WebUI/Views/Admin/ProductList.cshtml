
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<NSKKTicaret.WebUI.Models.Product>
<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <button href="/Admin/AddProduct" class="btn green">
                        Yeni Ürün <i class="icon-plus"></i>
                    </button>
                </div>
            </div>
            <br/>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Kategori</th>
                        <th>Eklenme Tarihi</th>
                        <th>Marka</th>
                        <th>Son Kullanma Tarihi</th>
                        <th>Resim Ekle</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var prod in Model)
                   {
                    <tr class="">
                        <td>@prod.ProductName</td>
                        <td>@prod.Description</td>
                        <td>@prod.PurchasePrice</td>
                        <td>@prod.SalesPrice</td>
                        <td>@prod.Category.CategoryName</td>
                        <td>@prod.CreationDateTime</td>
                        <td>@prod.Brand.BrandName</td>
                        <td>@prod.ExpirationDateTime</td>
                        <td><a class="" href="/Admin/AddProductPicture/@prod.id"><i class="icon-add"></i>Resim Ekle</a></td>
                        <td><a class="edit" href="/Admin/UpdateProduct/@prod.id"><i class="icon-pencil"></i>Güncelle</a></td>
                        <td><a class="delete" href="/Admin/DeleteProduct/@prod.id"><i class="icon-trash"></i>Sil</a></td>
                    </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</section>


