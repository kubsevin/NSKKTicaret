
@{
    ViewBag.Title = "Marka Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Marka Ekle
            </header>
            <div class="panel-body">
                <form action="/Admin/AddBrand" class="form-horizontal tasi-form" method="post">
                    <br/>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="BrandName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Description">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Marka Resmi</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                                    <input type="file" class="default" name="fileUpload" />
                                </span>
                                <span class="fileupload-preview" style="margin-left:5px;"></span>
                                <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
                                <br />
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-danger" type="submit">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>


